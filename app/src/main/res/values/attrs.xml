<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="XEditText">
        <attr name="x_separator" format="string"/>
        <attr name="x_disableClear" format="boolean"/>
        <attr name="x_clearDrawable" format="reference"/>
        <attr name="x_showPwdDrawable" format="reference"/>
        <attr name="x_hidePwdDrawable" format="reference"/>
        <attr name="x_disableEmoji" format="boolean"/>
    </declare-styleable>

    <declare-styleable name="AmountView">
        <!-- 左右2边+-按钮的宽度 -->
        <attr name="btnWidth" format="dimension" />
        <!-- 中间TextView的宽度 -->
        <attr name="tvWidth" format="dimension" />
        <!--<attr name="tvColor" format="color"/>-->
        <attr name="tvTextSize" format="dimension"/>
        <attr name="btnTextSize" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="DashIndicator">
        <attr name="dash_indicator_height" format="dimension|reference" />
        <attr name="dash_indicator_long_length" format="dimension|reference" />
        <attr name="dash_indicator_short_length" format="dimension|reference" />
        <attr name="dash_indicator_space" format="dimension|reference"/>
        <attr name="dish_indicator_color" format="color|reference"/>
        <attr name="dish_indicator_color_selected" format="color|reference"/>
    </declare-styleable>

</resources>
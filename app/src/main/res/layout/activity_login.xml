<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.LoginActivity">

    <include
        android:id="@+id/toolbar_include"
        layout="@layout/view_toolbar"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:src="@mipmap/ic_login_bg"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"
            android:text="能耗监测"
            android:textSize="22sp"
            android:textColor="@color/colorWhite"/>

    </FrameLayout>

    <LinearLayout
        android:id="@+id/ll_input_area"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar_include"
        android:layout_marginTop="75dp"
        android:layout_marginStart="11dp"
        android:layout_marginEnd="11dp"
        android:background="@mipmap/bg_login_account"
        android:orientation="vertical"
        android:paddingLeft="29dp"
        android:paddingRight="29dp">

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="59dp"
            android:text="用户名"
            android:textSize="13sp"
            android:textColor="@color/colorPrimary"
            android:visibility="invisible"/>

        <com.szny.energyproject.widget.XEditText
            android:id="@+id/et_name"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="输入用户名"
            android:imeOptions="actionNext"
            android:singleLine="true"
            android:text=""
            android:textColor="@color/color_111111"
            android:textColorHint="@color/color_bdbdbd"
            android:textSize="16sp"
            app:x_clearDrawable="@mipmap/ic_login_delete" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/lineHight"
            android:background="#dfdfdf" />

        <TextView
            android:id="@+id/tv_pwd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:text="密码"
            android:textSize="13sp"
            android:textColor="@color/colorPrimary"
            android:visibility="invisible"/>

        <com.szny.energyproject.widget.XEditText
            android:id="@+id/et_pwd"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="输入密码"
            android:imeOptions="actionDone"
            android:inputType="textPassword"
            android:maxLength="20"
            android:singleLine="true"
            android:text=""
            android:textColor="@color/color_111111"
            android:textColorHint="@color/color_bdbdbd"
            android:textSize="16sp"
            app:x_clearDrawable="@mipmap/ic_login_delete" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/lineHight"
            android:background="#dfdfdf" />

        <Button
            android:id="@+id/btn_login"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/btn_login_shape1"
            android:text="登录"
            android:textColor="@color/colorWhite"
            android:textSize="14sp"/>

    </LinearLayout>

</RelativeLayout>
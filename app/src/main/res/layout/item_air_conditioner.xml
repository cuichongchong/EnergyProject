<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/white_shape"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp">
        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="办公室空调"
            android:textColor="@color/color_111111"
            android:textSize="16sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@+id/set_switch"
            android:layout_marginEnd="5dp"
            android:text="开关"
            android:textSize="16sp"
            android:textColor="@color/color_111111"/>
        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/set_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:thumb="@drawable/thumb"
            app:track="@drawable/track"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/lineHight"
        android:background="@color/color_f0f0f0"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp">
        <ImageView
            android:id="@+id/iv_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_indoor_temp"
            android:paddingTop="28dp"/>
        <TextView
            android:id="@+id/tv_indoor_temp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/iv_img"
            app:drawableEndCompat="@mipmap/ic_centigrade"
            android:text="25"
            android:textSize="40sp"
            android:textColor="@color/color_111111"/>
        <TextView
            android:id="@+id/tv_model"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/tv_indoor_temp"
            android:layout_marginStart="20dp"
            android:text="制冷"
            android:textSize="15sp"
            android:textColor="@color/color_1790FF"/>
        <TextView
            android:id="@+id/tv_gear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/tv_indoor_temp"
            android:layout_below="@+id/tv_model"
            android:layout_marginStart="20dp"
            android:layout_marginTop="30dp"
            android:text="自动"
            android:textSize="15sp"
            android:textColor="@color/color_1790FF"/>
        <TextView
            android:id="@+id/tv_set_temp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/tv_model"
            android:layout_marginStart="20dp"
            android:layout_marginTop="18dp"
            android:text="26"
            android:textColor="@color/color_111111"
            android:textSize="26sp"
            app:drawableRightCompat="@mipmap/ic_centigrade"
            app:drawableLeftCompat="@mipmap/ic_set_temp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/lineHight"
        android:background="@color/color_f0f0f0"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_set_model"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="模式"
            android:textSize="16sp"
            android:textColor="@color/color_333333"/>
        <View
            android:layout_width="@dimen/lineHight"
            android:layout_height="match_parent"
            android:background="@color/color_f0f0f0"/>
        <TextView
            android:id="@+id/tv_set_gear"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="风速"
            android:textSize="16sp"
            android:textColor="@color/color_333333"/>
        <View
            android:layout_width="@dimen/lineHight"
            android:layout_height="match_parent"
            android:background="@color/color_f0f0f0"/>
        <ImageView
            android:id="@+id/iv_desc"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:layout_weight="1"
            android:gravity="center"
            android:src="@mipmap/ic_desc"/>
        <View
            android:layout_width="@dimen/lineHight"
            android:layout_height="match_parent"
            android:background="@color/color_f0f0f0"/>
        <ImageView
            android:id="@+id/iv_add"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:layout_weight="1"
            android:gravity="center"
            android:src="@mipmap/ic_add"/>
    </LinearLayout>
</LinearLayout>